<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_activity_nav_graph"
    app:startDestination="@id/main_activity_home_fragment">

    <fragment
        android:id="@+id/main_activity_home_fragment"
        android:name="hochschule.de.bachelorthesis.view.fragments.mainActivity.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home" />
    <fragment
        android:id="@+id/main_activity_food_fragment"
        android:name="hochschule.de.bachelorthesis.view.fragments.mainActivity.FoodFragment"
        android:label="Foods">
        <action
            android:id="@+id/action_main_activity_food_fragment_to_addFoodActivity"
            app:destination="@id/addFoodActivity"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:popUpTo="@+id/main_activity_food_fragment" />
        <action
            android:id="@+id/action_main_activity_food_fragment_to_FoodActivity"
            app:destination="@id/FoodActivity"
            app:enterAnim="@anim/nav_default_enter_anim" />
    </fragment>
    <fragment
        android:id="@+id/main_activity_me_fragment"
        android:name="hochschule.de.bachelorthesis.view.fragments.mainActivity.MeFragment"
        android:label="User data"
        tools:layout="@layout/fragment_me">
        <action
            android:id="@+id/action_main_activity_me_fragment_to_meEditFragment"
            app:destination="@id/meEditFragment" />
    </fragment>
    <fragment
        android:id="@+id/main_activity_graphs_fragment"
        android:name="hochschule.de.bachelorthesis.view.fragments.mainActivity.GraphsFragment"
        android:label="Graphs"
        tools:layout="@layout/fragment_graphs" />
    <activity
        android:id="@+id/addFoodActivity"
        android:name="hochschule.de.bachelorthesis.view.activities.AddFoodActivity"
        android:label="Add new Food"
        tools:layout="@layout/activity_add_food" />
    <activity
        android:id="@+id/FoodActivity"
        android:name="hochschule.de.bachelorthesis.view.activities.FoodInfoActivity"
        android:label="activity_food"
        tools:layout="@layout/activity_food" >
        <argument
            android:name="foodId"
            app:argType="integer" />
    </activity>
    <fragment
        android:id="@+id/meEditFragment"
        android:name="hochschule.de.bachelorthesis.view.fragments.mainActivity.MeEditFragment"
        android:label="Edit User Data"
        tools:layout="@layout/fragment_me_edit" />

</navigation>