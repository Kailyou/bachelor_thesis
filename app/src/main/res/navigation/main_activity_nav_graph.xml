<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_activity_nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="hochschule.de.bachelorthesis.view.fragments.mainActivity.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home" />
    <fragment
        android:id="@+id/foodFragment"
        android:name="hochschule.de.bachelorthesis.view.fragments.mainActivity.FoodFragment"
        android:label="My Foods"
        tools:layout="@layout/fragment_food">
        <action
            android:id="@+id/action_foodFragment_to_addFood"
            app:destination="@id/addFood" />
        <action
            android:id="@+id/action_foodFragment_to_foodInfoFragment"
            app:destination="@id/foodInfoFragment" />
    </fragment>

    <fragment
        android:id="@+id/addFood"
        android:name="hochschule.de.bachelorthesis.view.fragments.foodInfo.AddFood"
        android:label="Add Food"
        tools:layout="@layout/fragment_food_add" />

    <fragment
        android:id="@+id/foodInfoFragment"
        android:name="hochschule.de.bachelorthesis.view.fragments.foodInfo.FoodInfoFragment"
        android:label="Food Information"
        tools:layout="@layout/fragment_food_info">
        <action
            android:id="@+id/action_foodInfoFragment_to_addMeasurement"
            app:destination="@id/addMeasurement" />
        <argument
            android:name="food_id"
            app:argType="integer" />
    </fragment>

    <fragment
        android:id="@+id/addMeasurement"
        android:name="hochschule.de.bachelorthesis.view.fragments.foodInfo.AddMeasurement"
        android:label="Add Measurement"
        tools:layout="@layout/fragment_add_measurement" >
        <argument
            android:name="food_id"
            app:argType="integer" />
    </fragment>

    <fragment
        android:id="@+id/graphsFragment"
        android:name="hochschule.de.bachelorthesis.view.fragments.mainActivity.GraphsFragment"
        android:label="Graphs"
        tools:layout="@layout/fragment_graphs" />
    <fragment
        android:id="@+id/meFragment"
        android:name="hochschule.de.bachelorthesis.view.fragments.mainActivity.MeFragment"
        android:label="Me"
        tools:layout="@layout/fragment_me">
        <action
            android:id="@+id/action_meFragment_to_meEditFragment"
            app:destination="@id/meEditFragment" />
    </fragment>
    <fragment
        android:id="@+id/meEditFragment"
        android:name="hochschule.de.bachelorthesis.view.fragments.mainActivity.MeEditFragment"
        android:label="Edit User Data"
        tools:layout="@layout/fragment_me_edit">
        <action
            android:id="@+id/action_meEditFragment_to_meFragment"
            app:destination="@id/meFragment" />
    </fragment>

</navigation>

