<?xml version="1.0" encoding="utf-8"?>


<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto">

  <data>
    <import type="hochschule.de.bachelorthesis.utility.Converter"/>

    <variable
      name="vm"
      type="hochschule.de.bachelorthesis.viewmodels.FoodViewModel"/>
  </data>

  <androidx.coordinatorlayout.widget.CoordinatorLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
      android:id="@+id/scroll"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Time information -->
        <TextView
          android:id="@+id/time"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_margin="16dp"
          android:text="@string/time_information"
          android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
          android:textColor="@color/colorPrimary"/>

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginStart="16dp"
          android:layout_marginEnd="16dp">

          <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/date"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"/>

          <TextView
            android:id="@+id/date"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="end"
            android:text="@{vm.measurementModel.timestamp}"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"/>
        </LinearLayout>

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginStart="16dp"
          android:layout_marginTop="16dp"
          android:layout_marginEnd="16dp">

          <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/time_started"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"/>

          <TextView
            android:id="@+id/time_started"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="end"
            android:text="@{vm.measurementModel.timestamp}"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"/>
        </LinearLayout>

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginStart="16dp"
          android:layout_marginTop="16dp"
          android:layout_marginEnd="16dp">

          <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/time_ended"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"/>

          <TextView
            android:id="@+id/time_ended"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="@{vm.measurementModel.timestamp}"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"/>
        </LinearLayout>

        <!-- Advance information -->
        <TextView
          android:id="@+id/textView"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_margin="16dp"
          android:text="@string/advance_information"
          android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
          android:textColor="@color/colorPrimary"/>

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginStart="16dp"
          android:layout_marginEnd="16dp">

          <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/amount_consumed"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"/>

          <TextView
            android:id="@+id/amount"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="end"
            android:text="@{Converter.convertInteger(safeUnbox(vm.measurementModel.amount))}"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"/>
        </LinearLayout>

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginStart="16dp"
          android:layout_marginTop="16dp"
          android:layout_marginEnd="16dp">

          <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/stress_level"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"/>

          <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="end"
            android:text="@{vm.measurementModel.stressed}"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"/>
        </LinearLayout>

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginStart="16dp"
          android:layout_marginTop="16dp"
          android:layout_marginEnd="16dp">

          <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/tired_level"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"/>

          <TextView
            android:id="@+id/tired"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="end"
            android:text="@{vm.measurementModel.tired}"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"/>
        </LinearLayout>


        <!-- Measurement -->
        <TextView
          android:id="@+id/glucose_values"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_margin="16dp"
          android:text="@string/glucose_values"
          android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
          android:textColor="@color/colorPrimary"/>

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginStart="16dp"
          android:layout_marginEnd="16dp">

          <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/start_value"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"/>

          <TextView
            android:id="@+id/glucose_start"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="end"
            android:text="@{Converter.convertInteger(safeUnbox(vm.measurementModel.value0))}"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"/>
        </LinearLayout>

        <TextView
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:layout_marginStart="16dp"
          android:layout_marginTop="16dp"
          android:text="@string/glucose_after"
          android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"/>

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginStart="32dp"
          android:layout_marginTop="16dp"
          android:layout_marginEnd="16dp">

          <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/_15_minutes"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"/>

          <TextView
            android:id="@+id/glucose_15"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="end"
            android:text="@{Converter.convertInteger(safeUnbox(vm.measurementModel.value15))}"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"/>
        </LinearLayout>

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginStart="32dp"
          android:layout_marginTop="16dp"
          android:layout_marginEnd="16dp">

          <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/_30_minutes"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"/>

          <TextView
            android:id="@+id/glucose_30"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="end"
            android:text="@{Converter.convertInteger(safeUnbox(vm.measurementModel.value30))}"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"/>
        </LinearLayout>

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginStart="32dp"
          android:layout_marginTop="16dp"
          android:layout_marginEnd="16dp">

          <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/_45_minutes"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"/>

          <TextView
            android:id="@+id/glucose_45"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="end"
            android:text="@{Converter.convertInteger(safeUnbox(vm.measurementModel.value45))}"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"/>
        </LinearLayout>

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginStart="32dp"
          android:layout_marginTop="16dp"
          android:layout_marginEnd="16dp">

          <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/_60_minutes"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"/>

          <TextView
            android:id="@+id/glucose_60"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="end"
            android:text="@{Converter.convertInteger(safeUnbox(vm.measurementModel.value60))}"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"/>
        </LinearLayout>

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginStart="32dp"
          android:layout_marginTop="16dp"
          android:layout_marginEnd="16dp">

          <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/_75_minutes"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"/>

          <TextView
            android:id="@+id/glucose_75"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="end"
            android:text="@{Converter.convertInteger(safeUnbox(vm.measurementModel.value75))}"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"/>
        </LinearLayout>

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginStart="32dp"
          android:layout_marginTop="16dp"
          android:layout_marginEnd="16dp">

          <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/_90_minutes"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"/>

          <TextView
            android:id="@+id/glucose_90"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="end"
            android:text="@{Converter.convertInteger(safeUnbox(vm.measurementModel.value90))}"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"/>
        </LinearLayout>

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginStart="32dp"
          android:layout_marginTop="16dp"
          android:layout_marginEnd="16dp">

          <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/_105_minutes"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"/>

          <TextView
            android:id="@+id/glucose_105"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="end"
            android:text="@{Converter.convertInteger(safeUnbox(vm.measurementModel.value105))}"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"/>
        </LinearLayout>

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginStart="32dp"
          android:layout_marginTop="16dp"
          android:layout_marginEnd="16dp">

          <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/_120_minutes"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"/>

          <TextView
            android:id="@+id/glucose_120"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="end"
            android:text="@{Converter.convertInteger(safeUnbox(vm.measurementModel.value120))}"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"/>
        </LinearLayout>
      </LinearLayout>
    </ScrollView>

    <hochschule.de.bachelorthesis.widget.BetterFloatingActionButton
      android:id="@+id/fab"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="bottom|end"
      android:layout_margin="@dimen/fab_margin"
      app:srcCompat="@drawable/ic_edit_white"/>

  </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>
