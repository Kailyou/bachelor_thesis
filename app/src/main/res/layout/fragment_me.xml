<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto">

  <androidx.coordinatorlayout.widget.CoordinatorLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
      android:id="@+id/scroll"
      android:layout_width="match_parent"
      android:layout_height="match_parent">

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- PERSONAL DATA -->
        <TextView
          android:id="@+id/time"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_margin="16dp"
          android:text="@string/personal_data"
          android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
          android:textColor="@color/colorPrimary"/>

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginStart="16dp"
          android:layout_marginEnd="16dp">

          <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/age"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"/>

          <TextView
            android:id="@+id/age"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="end"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"/>
        </LinearLayout>

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="8dp"
          android:layout_marginStart="16dp"
          android:layout_marginEnd="16dp">

          <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/height"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"/>

          <TextView
            android:id="@+id/height"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="end"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"/>
        </LinearLayout>

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="8dp"
          android:layout_marginStart="16dp"
          android:layout_marginEnd="16dp">

          <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/weight"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"/>

          <TextView
            android:id="@+id/weight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"/>
        </LinearLayout>

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="8dp"
          android:layout_marginStart="16dp"
          android:layout_marginEnd="16dp">

          <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/sex"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"/>

          <TextView
            android:id="@+id/sex"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"/>
        </LinearLayout>

        <!-- LIFESTYLE -->
        <TextView
          android:id="@+id/textView"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_margin="16dp"
          android:text="@string/lifestyle"
          android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
          android:textColor="@color/colorPrimary"/>

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginStart="16dp"
          android:layout_marginEnd="16dp">

          <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/fitness_level"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"/>

          <TextView
            android:id="@+id/fitness_level"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="end"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"/>
        </LinearLayout>

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="8dp"
          android:layout_marginStart="16dp"
          android:layout_marginEnd="16dp">

          <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/taking_medication"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"/>

          <TextView
            android:id="@+id/medication"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="end"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"/>
        </LinearLayout>

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="8dp"
          android:layout_marginStart="16dp"
          android:layout_marginEnd="16dp">

          <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/allergies_available"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"/>

          <TextView
            android:id="@+id/allergies"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="end"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"/>
        </LinearLayout>

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="8dp"
          android:layout_marginStart="16dp"
          android:layout_marginEnd="16dp">

          <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/smoking"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"/>

          <TextView
            android:id="@+id/smoking"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="end"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"/>
        </LinearLayout>
        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="8dp"
          android:layout_marginStart="16dp"
          android:layout_marginEnd="16dp">

          <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/diabetes"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"/>

          <TextView
            android:id="@+id/diabetes"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="end"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"/>
        </LinearLayout>

      </LinearLayout>
    </ScrollView>

    <hochschule.de.bachelorthesis.widget.BetterFloatingActionButton
      android:id="@+id/button_edit_me"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_margin="@dimen/fab_margin"
      android:layout_gravity="bottom|end"
      app:srcCompat="@drawable/ic_edit_white"/>
  </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>