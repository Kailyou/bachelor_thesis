<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="viewModel"
            type="hochschule.de.bachelorthesis.view_model.activities.FoodInfoViewModel" />
    </data>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        android:stretchColumns="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nutreons"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6" />

        <TableRow>
            <TextView
                android:layout_column="1"
                android:padding="3dip"
                android:text="@string/energy_kcal"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1" />

            <TextView
                android:gravity="end"
                android:padding="3dip"
                android:text="@{`` +viewModel.energyKcal}"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1" />
        </TableRow>

        <TableRow>
            <TextView
                android:layout_column="1"
                android:padding="3dip"
                android:text="@string/energy_kj"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1" />

            <TextView
                android:gravity="end"
                android:padding="3dip"
                android:text="@{`` +viewModel.energyKJ}"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1" />
        </TableRow>

        <View
            android:layout_height="2dip"
            android:background="#FF909090" />

        <TableRow>
            <TextView
                android:layout_column="1"
                android:padding="3dip"
                android:text="@string/fat"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1" />

            <TextView
                android:gravity="end"
                android:padding="3dip"
                android:text="@{`` +viewModel.fat}"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1" />
        </TableRow>

        <TableRow>
            <TextView
                android:layout_column="1"
                android:padding="3dip"
                android:text="@string/of_which_saturates"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1" />

            <TextView
                android:gravity="end"
                android:padding="3dip"
                android:text="@{`` +viewModel.saturates}"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1" />
        </TableRow>

        <View
            android:layout_height="2dip"
            android:background="#FF909090" />

        <TableRow>

            <View
                android:layout_height="2dip"
                android:background="#FF909090" />

            <TextView
                android:layout_column="1"
                android:padding="3dip"
                android:text="@string/protein"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1" />

            <TextView
                android:gravity="end"
                android:padding="3dip"
                android:text="@{`` +viewModel.protein}"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1" />
        </TableRow>

        <View
            android:layout_height="2dip"
            android:background="#FF909090" />

        <TableRow>
            <TextView
                android:layout_column="1"
                android:padding="3dip"
                android:text="@string/carbohydrates"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1" />

            <TextView
                android:gravity="end"
                android:padding="3dip"
                android:text="@{`` +viewModel.carbohydrates}"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1" />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_column="1"
                android:padding="3dip"
                android:text="@string/of_which_sugars"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1" />

            <TextView
                android:gravity="end"
                android:padding="3dip"
                android:text="@{`` +viewModel.sugar}"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1" />
        </TableRow>

        <View
            android:layout_height="2dip"
            android:background="#FF909090" />

        <TableRow>
            <TextView
                android:layout_column="1"
                android:padding="3dip"
                android:text="@string/salt"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1" />

            <TextView
                android:gravity="end"
                android:padding="3dip"
                android:text="@{`` +viewModel.salt}"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1" />
        </TableRow>

        <View
            android:layout_height="2dip"
            android:background="#FF909090" />

    </TableLayout>
</layout>
