<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android">

  <ScrollView
    android:id="@+id/scroll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">

      <!-- GENERAL -->
      <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="@string/general"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
        android:textColor="@color/colorPrimary"/>

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp">

        <TextView
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:text="@string/food_name"
          android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"/>

        <TextView
          android:id="@+id/food_name"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:gravity="end"
          android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"/>
      </LinearLayout>

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp">

        <TextView
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:text="@string/brand_name"
          android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"/>

        <TextView
          android:id="@+id/brand_name"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:gravity="end"
          android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"/>
      </LinearLayout>

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp">

        <TextView
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:text="@string/type"
          android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"/>

        <TextView
          android:id="@+id/type"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="end"
          android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"/>
      </LinearLayout>

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp">

        <TextView
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:text="@string/kcal_100"
          android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"/>

        <TextView
          android:id="@+id/kilo_calories"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="end"
          android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"/>
      </LinearLayout>


      <!-- ANALYSES -->
      <TextView
          android:id="@+id/glucose_values"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_margin="16dp"
          android:text="@string/analyses"
          android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
          android:textColor="@color/colorPrimary"/>

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp">

        <TextView
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:text="@string/amount_measurements"
          android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"/>

        <TextView
          android:id="@+id/amount"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:gravity="end"
          android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"/>
      </LinearLayout>

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp">

        <TextView
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:text="@string/glucose_max_mg_dl"
          android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"/>

        <TextView
          android:id="@+id/glucose_max"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:gravity="end"
          android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"/>
      </LinearLayout>

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp">

        <TextView
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:text="@string/glucose_avg_mg_dl"
          android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"/>

        <TextView
          android:id="@+id/glucose_average"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:gravity="end"
          android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"/>
      </LinearLayout>

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp">

        <TextView
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:text="@string/glucose_max_increase_mg_dl"
          android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"/>

        <TextView
          android:id="@+id/glucose_increase_max"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:gravity="end"
          android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"/>
      </LinearLayout>

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
          android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp">

        <TextView
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:text="@string/standard_deviation"
          android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"/>

        <TextView
          android:id="@+id/stdev"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:gravity="end"
          android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"/>
      </LinearLayout>

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
          android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp">

        <TextView
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:text="@string/gi"
          android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"/>

        <TextView
          android:id="@+id/gi"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:gravity="end"
          android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"/>
      </LinearLayout>

    </LinearLayout>
  </ScrollView>
</layout>
